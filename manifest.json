{
  "manifest_version": 2,

  "name": "Tab Timer",
  "description": "This extension shows the time spent on this tab.",
  "version": "1.0",

  "background":{
    "scripts": ["timer.js"],
    "persistent": true
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "timer.html",
    "default_title": "Click here!"
  },
  "permissions": [
    "activeTab"
  ]
}